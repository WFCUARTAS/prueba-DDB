@model PruebaBig_WIllianCuartas.Models.MUser

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["Message_type"]">
        @TempData["Message"]
    </div>
}
<div class="row">
    <div class="col-4"></div>
        <div class="col-4" style="font-size:2rem">

        <form method="post" asp-action="login" asp-controller="Autentication">

            <h1 class="text-center">
                Inicio de sesión
            </h1>


            <div class="form-group">
                <label for="Email">Email</label>
                <input  type="text" class="form-control tex" id="Email" name="Email" value="@Model.Email" required />
            </div>

            <div class="form-group">
                <label for="Password">Contraseña:</label>
                <input type="password" class="form-control tex" id="Password" name="Password" value="@Model.Password" required />
            </div>

            <button style="font-size:2rem" type="submit" class="btn btn-success mt-3 px-5">Iniciar</button>

        </form>
    
        </div>
    <div class="col-4"></div>
</div>